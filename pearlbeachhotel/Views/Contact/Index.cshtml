    <script>
        function SendEmail()
        {
            name = $( "#name" ).val();
            email = $( "#email" ).val();
            phoneNumber = $( "#phone" ).val();
            body = $( "#body" ).val();
            $.ajax({
                type: 'get',
                url: '@Url.Action("SendEmail", "Hotel")?name='+ name + '&email=' + email + '&phoneNumber=' + phoneNumber + '&body=' + body,
                success: function(result) {
                    alert('Gửi Email Thành Công');
                },
                error: function(jqxhr, status, exception) {
                    alert('Gửi Email Không Thành Công');
                }
            });
        }
    </script>
